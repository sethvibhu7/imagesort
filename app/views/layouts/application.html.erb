<!DOCTYPE html>
<html>
<head>
  <title>Personel</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <% flash.each do |key, value| %>
      <% if value.is_a? Array %>
          <%= content_tag(:div, class: "alert alert-#{key}", style: "text-align:center") do %>
              <% value.each do |v| %>
                  <%= content_tag(:div, v, style: "text-align:center") %>
              <% end %>
          <% end %>
      <% else %>
          <%= content_tag(:div, value, class: "alert alert-#{key}", style: "text-align:center") %>
      <% end %>
  <% end %>
  <%= yield %>
</div>
</body>
</html>
