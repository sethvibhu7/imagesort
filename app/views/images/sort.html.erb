<script>
    $(function () {
        $("body").keydown(function (e) {
            key = e.keyCode - 96
            $("#move").val(key);
            if (key >= 0 && key <10)
             $("#submit").click();

        });
    });

</script>

<style>.fit {
    /* set relative picture size */
    max-width: 100%;
    max-height:100%;
}

.center {
    display: block;
    margin: auto;
}
</style>
<script>
  $(function(){
      $('.fit').css('max-height',$(window).height());
      $('.fit').css('max-width', $(window).width());

  });
</script>

<% if @image %>
<%= ("<img class='center fit' src='data:image/jpg;base64,%s'>" % Base64.encode64(@image)).html_safe %>
    <% else %>
    No image left
    <% end %>

<%= form_tag ("/images/move") do %>
    <%= hidden_field_tag :path, @path %>
    <%= hidden_field_tag :move %>
    <%= submit_tag :sumbit, id: 'submit', style: 'display: none;' %>
<% end %>
